<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.coals.lesson06.dao.FavoriteDAO">
	<insert id="insertFavorite" parameterType="map">
		INSERT INTO `favorite` 
		(
			`name`
			, `url`
			, `createdAt`
			, `updatedAt`
		)
		VALUES (
			#{name}
			, #{url}
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="selectFavorite" resultType="com.coals.lesson06.model.Favorite">
		SELECT 
			`id`
			, `name`
			, `url`
		FROM
			`favorite`;
	</select>
	
	<select id="existFavoriteByUrl" parameterType="string" resultType="boolean">
		SELECT
			COUNT(1)
		FROM
			`favorite`
		WHERE
			`url` = #{url}
	</select>
	
	<delete id="deleteFavorite" parameterType="int">
		DELETE FROM
			`favorite`
		WHERE
			`id` = #{id};			
	</delete>
</mapper>